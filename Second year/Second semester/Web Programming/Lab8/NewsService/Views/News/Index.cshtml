@model IEnumerable<NewsService.Models.News>

@{
    ViewData["Title"] = "News";
}

<div class="max-w-7xl min-h-screen mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold mb-6">News</h2>

    <div class="mb-6">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div>
                <label for="startDate" class="block text-sm font-medium text-gray-700 mb-1">Start Date:</label>
                <input type="date" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" 
                       id="startDate" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")">
            </div>
            <div>
                <label for="endDate" class="block text-sm font-medium text-gray-700 mb-1">End Date:</label>
                <input type="date" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" 
                       id="endDate" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")">
            </div>
            <div>
                <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Category:</label>
                <select class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" 
                        id="category" name="category">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat" selected="@(cat == ViewBag.Category)">@cat</option>
                    }
                </select>
            </div>
            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Filter
            </button>
            <a href="@Url.Action("Index", "News")" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                Clear Filters
            </a>
        </form>
    </div>

    <div class="mb-6">
        <a asp-action="Create" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
            Create New
        </a>
    </div>

    @if (ViewBag.PreviousFilters != null && ViewBag.PreviousFilters.Count > 0)
        {
            <div class="mt-4 pt-4 border-t border-gray-200">
                <h4 class="text-sm font-medium text-gray-900 mb-2">Previous Filters:</h4>
                <div class="flex flex-wrap gap-2">
                    @foreach (var filter in ViewBag.PreviousFilters)
                    {
                        <a href="@Url.Action("Index", "News", new { startDate = filter.StartDate, endDate = filter.EndDate, category = filter.Category })" 
                           class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 hover:bg-gray-200">
                            @(filter.StartDate != null ? $"From: {filter.StartDate:MM/dd/yyyy}" : "") 
                            @(filter.EndDate != null ? $"To: {filter.EndDate:MM/dd/yyyy}" : "")
                            @(filter.Category != null ? $"Category: {filter.Category}" : "")
                        </a>
                    }
                </div>
            </div>
        }

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-6">
                    <h5 class="text-lg font-semibold text-gray-900 mb-2">@item.Title</h5>
                    <h6 class="text-sm text-gray-500 mb-2">@item.Category</h6>
                    <p class="text-gray-700 mb-4">@item.Content</p>
                    <p class="text-sm text-gray-500 mb-4">
                        By @item.User.Username on @item.CreatedAt.ToString("MM/dd/yyyy")
                    </p>
                    @if (item.UserId == Context.Session.GetInt32("UserId"))
                    {
                        <div class="flex space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" 
                               class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="inline">
                                <button type="submit" 
                                        class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                                        onclick="return confirm('Are you sure you want to delete this news?')">
                                    Delete
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div> 