@model NewsService.Models.News

@{
    ViewData["Title"] = "Create News";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold mb-6">Create News</h2>

    <div class="max-w-2xl">
        <form asp-action="Create" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
            
            <div>
                <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Content" class="block text-sm font-medium text-gray-700"></label>
                <textarea asp-for="Content" rows="5" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
                <span asp-validation-for="Content" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Category" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Category" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                <span asp-validation-for="Category" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Importance" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Importance" type="number" min="1" max="5" 
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                <span asp-validation-for="Importance" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex space-x-4">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Create
                </button>
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 