@{
    ViewData["Title"] = "Hotel Booking System";
}
<div class="max-w-2xl mx-auto p-6 text-center">
    <h1 class="text-2xl font-bold text-gray-800 mb-2">Welcome to Hotel Booking System</h1>
    <p class="text-gray-600 mb-6">Manage your hotel reservations with dynamic pricing</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-white border rounded p-4 flex flex-col items-center">
            <h5 class="font-semibold text-gray-700 mb-1">Search Available Rooms</h5>
            <p class="text-xs text-gray-500 mb-2">Find and book available rooms for your desired dates with real-time
                pricing.</p>
            <a asp-controller="Hotel" asp-action="AvailableRooms"
                class="bg-blue-600 text-white rounded px-4 py-2 text-xs">Search Rooms</a>
        </div>
        <div class="bg-white border rounded p-4 flex flex-col items-center">
            <h5 class="font-semibold text-gray-700 mb-1">My Reservations</h5>
            <p class="text-xs text-gray-500 mb-2">View all your current and past reservations with pricing details.</p>
            <a asp-controller="Hotel" asp-action="MyReservations"
                class="bg-green-600 text-white rounded px-4 py-2 text-xs">View Reservations</a>
        </div>
        <div class="bg-white border rounded p-4 flex flex-col items-center">
            <h5 class="font-semibold text-gray-700 mb-1">Guest Count</h5>
            <p class="text-xs text-gray-500 mb-2">Check total number of guests staying in the hotel on any date.</p>
            <a asp-controller="Hotel" asp-action="GuestCount"
                class="bg-cyan-600 text-white rounded px-4 py-2 text-xs">Check Guest Count</a>
        </div>
    </div>
    <div class="mt-6">
        <h3 class="text-base font-semibold text-gray-700 mb-2">Dynamic Pricing Information</h3>
        <ul class="text-xs text-gray-500 mb-0 text-left inline-block">
            <li><span class="font-bold">Low occupancy (≤50%):</span> Base price</li>
            <li><span class="font-bold">Medium occupancy (50-80%):</span> Base price + 20%</li>
            <li><span class="font-bold">High occupancy (>80%):</span> Base price + 50%</li>
        </ul>
    </div>
</div>
