@using HotelRoomReservation.Models
@model List<Reservation>
@{
    ViewData["Title"] = "My Reservations";
}

<div class="max-w-2xl mx-auto p-4">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6">My Reservations</h1>
    @if (Model.Any())
    {
        <div class="flex flex-col gap-4">
            @foreach (var reservation in Model)
            {
                var nights = (reservation.CheckOutDate - reservation.CheckInDate).Days;
                var pricePerNight = nights > 0 ? reservation.TotalPrice / nights : 0;
                var isUpcoming = reservation.CheckInDate > DateTime.Today;
                var isCurrent = reservation.CheckInDate <= DateTime.Today && reservation.CheckOutDate > DateTime.Today;
                var isPast = reservation.CheckOutDate <= DateTime.Today;
                <div class="bg-white border rounded p-4 flex flex-col gap-2">
                    <div class="flex justify-between items-center">
                        <div>
                            <span class="font-semibold text-gray-800">Room @reservation.HotelRoom?.RoomNumber</span>
                            <span class="ml-2 text-xs text-gray-500">@reservation.NumberOfGuests
                                guest@(reservation.NumberOfGuests > 1 ? "s" : "")</span>
                        </div>
                        <span
                            class="text-xs px-2 py-1 rounded @((isCurrent ? "bg-green-100 text-green-700" : isUpcoming ? "bg-blue-100 text-blue-700" : "bg-gray-100 text-gray-700"))">
                            @(isCurrent ? "Current" : isUpcoming ? "Upcoming" : "Completed")
                        </span>
                    </div>
                    <div class="flex justify-between text-sm text-gray-600">
                        <span>Check-in: @reservation.CheckInDate.ToString("MMM dd")</span>
                        <span>Check-out: @reservation.CheckOutDate.ToString("MMM dd")</span>
                        <span>@nights nights</span>
                    </div>
                    <div class="flex justify-between text-sm text-gray-600">
                        <span>Base: $@reservation.HotelRoom?.BasePrice/night</span>
                        <span>Total: <span class="font-bold text-blue-600">$@reservation.TotalPrice</span></span>
                    </div>
                    @if (reservation.HotelRoom != null && pricePerNight > reservation.HotelRoom.BasePrice)
                    {
                        <span class="text-xs text-orange-500">Dynamic pricing</span>
                    }
                    <div class="text-xs text-gray-400 mt-1">Reservation ID: #@reservation.Id</div>
                </div>
            }
        </div>
        <div class="mt-8 bg-blue-50 text-blue-700 rounded p-4 text-center">
            <div class="font-medium">Total Spent: <span class="font-bold">${@Model.Sum(r => r.TotalPrice):N0}</span></div>
            <div class="text-xs mt-1">Across @Model.Count reservation@(Model.Count != 1 ? "s" : "")</div>
        </div>
    }
    else
    {
        <div class="text-center py-12 text-gray-500">
            <div class="mb-2">No reservations found.</div>
            <a asp-action="AvailableRooms"
                class="inline-block border border-blue-600 text-blue-600 rounded px-4 py-2 text-sm hover:bg-blue-50">Search
                Available Rooms</a>
        </div>
    }
    <div class="mt-8 flex gap-2 justify-center">
        <a asp-action="AvailableRooms"
            class="border border-blue-600 text-blue-600 rounded px-4 py-2 text-sm hover:bg-blue-50">Make New
            Reservation</a>
        <a asp-action="GuestCount"
            class="border border-green-600 text-green-600 rounded px-4 py-2 text-sm hover:bg-green-50">View Guest
            Count</a>
    </div>
</div>