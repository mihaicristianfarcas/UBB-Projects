@{
    ViewData["Title"] = "Register";
}
<div class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="w-full max-w-sm bg-white border rounded p-6">
        <h2 class="text-center text-xl font-semibold text-gray-800 mb-4">Register</h2>
        <form asp-action="Register" method="post" class="flex flex-col gap-4">
            <div>
                <label for="username" class="block text-xs text-gray-600 mb-1">Username</label>
                <input type="text" id="username" name="username" required
                    class="w-full border rounded px-2 py-1 text-gray-700" placeholder="Choose a username">
            </div>
            <div>
                <label for="password" class="block text-xs text-gray-600 mb-1">Password</label>
                <input type="password" id="password" name="password" required
                    class="w-full border rounded px-2 py-1 text-gray-700" placeholder="Choose a password">
            </div>
            <button type="submit" class="bg-blue-600 text-white rounded px-4 py-2 mt-2">
                Register
            </button>
            <div class="text-center mt-2">
                <a asp-action="Login" class="text-blue-600 text-xs hover:underline">
                    Already have an account? Login
                </a>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-100 text-red-700 rounded p-2 text-xs">@Html.ValidationSummary(false)</div>
            }
        </form>
    </div>
</div>