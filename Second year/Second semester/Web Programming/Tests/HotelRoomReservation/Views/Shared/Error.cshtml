@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="max-w-lg mx-auto p-6 mt-12 bg-white border rounded">
    <h1 class="text-lg font-bold text-red-700 mb-2">Error</h1>
    <h2 class="text-base text-red-600 mb-4">An error occurred while processing your request.</h2>
    @if (Model.ShowRequestId)
    {
        <div class="text-xs text-gray-500 mb-2">
            <span class="font-semibold">Request ID:</span> <code>@Model.RequestId</code>
        </div>
    }
    <div class="mt-4 text-xs text-gray-500">
        <div class="font-semibold mb-1">Development Mode</div>
        <div>Swapping to <span class="font-bold">Development</span> environment will display more detailed information
            about the error that occurred.</div>
        <div class="mt-2"><span class="font-bold">The Development environment shouldn't be enabled for deployed
                applications.</span> It can result in displaying sensitive information from exceptions to end users. For
            local debugging, enable the <span class="font-bold">Development</span> environment by setting the <span
                class="font-bold">ASPNETCORE_ENVIRONMENT</span> environment variable to <span
                class="font-bold">Development</span> and restarting the app.</div>
    </div>
</div>
