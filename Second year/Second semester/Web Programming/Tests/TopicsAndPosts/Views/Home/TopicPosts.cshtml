@model List<TopicsAndPosts.Models.Post>
@{
    ViewData["Title"] = "Topic Posts";
    var topicName = Model.FirstOrDefault()?.Topic?.TopicName ?? "Topic";
}

<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Posts in "@topicName"</h2>
        <a href="@Url.Action("Index")"
            class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition duration-200">Back
            to All Posts</a>
    </div>

    <div>
        @if (Model.Any())
        {
            @foreach (var post in Model)
            {
                <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6 mb-4">
                    <p class="text-gray-700 mb-4">@post.Text</p>
                    <div class="flex justify-between items-center">
                        <small class="text-gray-500">
                            By <strong class="font-semibold">@post.User</strong> on @post.Date.ToString("yyyy-MM-dd HH:mm")
                        </small>
                        <a href="@Url.Action("EditPost", new { id = post.Id })"
                            class="bg-blue-100 hover:bg-blue-200 text-blue-700 text-sm px-3 py-1 rounded-md border border-blue-300 transition duration-200">Edit</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-gray-600">No posts in this topic yet.</p>
        }
    </div>
</div>