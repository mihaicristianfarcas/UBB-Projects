<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exam ASP.NET</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="min-h-screen bg-gray-50">
    <header>
        <nav class="bg-white shadow">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <a class="text-xl font-bold text-gray-800" asp-controller="Home" asp-action="Index">Exam ASP.NET</a>
                        </div>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center px-1 pt-1 text-gray-500 hover:text-gray-700">Home</a>
                        </div>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:items-center">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <span class="text-gray-500 mr-4">Welcome, @Context.Session.GetString("Username")!</span>
                            <a asp-controller="Account" asp-action="Logout" class="text-gray-500 hover:text-gray-700">Logout</a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="text-gray-500 hover:text-gray-700 mr-4">Login</a>
                            <a asp-controller="Account" asp-action="Register" class="text-gray-500 hover:text-gray-700">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
